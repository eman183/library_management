<odoo>
  <data>

    <record id="view_library_book_tree" model="ir.ui.view">
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="isbn"/>
                <field name="author_ids" widget="many2many_tags"/>
                <field name="publish_date"/>
                <field name="is_available"/>
            </tree>
        </field>
    </record>

    <record id="view_library_book_form" model="ir.ui.view">
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <form>
                <sheet>

                 <div class="oe_button_box" name="button_box">
                        <button name="open_active_rentals"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-book">
                    <field name="rental_ids" widget="statinfo"
                           string="Current Rentals"
                           domain="[('state','=','rented')]"/>
                </button>
                    </div>

                    <group>
                        <field name="name"/>
                        <field name="isbn"/>
                        <field name="author_ids" widget="many2many_tags"/>
                        <field name="publish_date"/>
                        <field name="cover_image" widget="image"/>
                        <field name="summary"/>
                        <field name="is_available" readonly="1"/>
                        <field name="rental_ids" widget="many2many_tags" invisible="1"/>
                    </group>
                    <notebook>
                          <page string="Rental History">
                                <field name="rental_line_ids" readonly="1">
                                    <tree edit="false" delete="false">
                                        <field name="rental_id" column_invisible="True"/>
                                        <field name="borrower_id"/>
                                        <field name="rental_date"/>
                                        <field name="return_date"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                            </page>

                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


    <record id="action_library_for_book" model="ir.actions.act_window">
        <field name="name">Books</field>
        <field name="res_model">library.book</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_library_root_base" name="Library"/>

    <menuitem id="menu_library_for_book" name="Books" parent="menu_library_root_base" action="action_library_for_book"/>

  </data>
</odoo>
