<odoo>
    <data>

        <record id="view_library_rental_line_tree" model="ir.ui.view">
            <field name="name">library.rental.line.tree</field>
            <field name="model">library.rental.line</field>
            <field name="arch" type="xml">
                <tree edit="false" delete="false">
                    <field name="book_id"/>
                    <field name="borrower_id"/>
                    <field name="rental_date"/>
                    <field name="return_date"/>
                    <field name="days_rented"/>
                    <field name="is_late"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>



        <record id="action_library_rental_line" model="ir.actions.act_window">
            <field name="name">Rental Lines</field>
            <field name="res_model">library.rental.line</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem id="menu_library_rental_line"
                  name="Rental Lines"
                  parent="menu_library_root_base"
                  action="action_library_rental_line"
                  />
    </data>
</odoo>